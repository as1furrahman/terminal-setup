# Cava Audio Visualizer Configuration (Mellifluous Theme)
# ~/.config/cava/config
# Part of: Cross-Distro Terminal Setup

[general]
# Smoothing mode: normal, scientific, waves, mono
mode = normal

# Frame rate (30-200)
framerate = 60

# Sensitivity
sensitivity = 100

# Bars
bars = 0
bar_width = 2
bar_spacing = 1

# Frequency range
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

# Sleep timer
sleep_timer = 0

[input]
# Audio source: auto, fifo, alsa, pulse, pipewire
method = pulse
source = auto

[output]
# Output method
method = ncurses
channels = stereo

# Raw mode settings
raw_target = /dev/stdout
data_format = binary
bit_format = 16bit
ascii_max_range = 1000

[color]
# Mellifluous theme - use terminal colors
background = default
foreground = default

# Gradient mode - Mellifluous palette
gradient = 1
gradient_count = 6

# Gradient colors (Mellifluous themed - lavender to cyan)
gradient_color_1 = '#5a6599'
